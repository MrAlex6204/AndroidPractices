<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mralex6204.android.timaster">

    <application
        android:name=".AndroidTiMasterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.splash_screen.Activity_SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.restore_password.Activity_RestorePassword" />
        <activity android:name=".activities.login.Activity_LogIn"
            android:theme="@style/FullScreenTheme.Tomato"

            />
        <activity
            android:name=".activities.signup.Activity_SignUp"
            android:theme="@style/FullScreenTheme"></activity>
        <activity android:name=".activities.main.Activity_Main"
            android:label="TiMaster Menu Principal"
            >

        </activity>
    </application>

</manifest>